<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ramesh.videos.VidShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/dm"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#006B3C">

    <com.dailymotion.android.player.sdk.PlayerWebView
        android:id="@+id/dm_player_web_view"
        android:layout_width="match_parent"
        android:layout_height="215dp">
    </com.dailymotion.android.player.sdk.PlayerWebView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="7sp"
        android:text="PLAY DailyMotion"
        android:id="@+id/dmPlay"
        android:layout_gravity="center_horizontal"
        android:onClick="dmstart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#E30022"
        android:orientation="vertical">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/you_player_view"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="7sp"
        android:text="PLAY YouTube"
        android:id="@+id/ytPlay"
        android:layout_gravity="center_horizontal"
        android:onClick="ytstart"/>

    </LinearLayout>


</LinearLayout>
